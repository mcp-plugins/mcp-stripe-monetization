# Stripe Configuration (Required)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Development Settings
NODE_ENV=development
DEBUG=true

# Authentication (Required for JWT)
JWT_SECRET=your-super-secret-jwt-key-here

# Database Configuration (Optional - defaults to SQLite)
DATABASE_URL=sqlite:./monetization.db
# For PostgreSQL: postgresql://user:password@localhost:5432/mcp_monetization
# For MySQL: mysql://user:password@localhost:3306/mcp_monetization

# Optional Settings
MCP_MONETIZATION_DEBUG=true
MCP_MONETIZATION_ENV=development
PORT=3000